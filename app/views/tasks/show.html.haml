#jobs 
	.job-task
		%h1.job-task=  @task.title
		%p= @task.description
		%p= @task.company
		%button.btn.btn-md.btn-default= link_to "Complete Task", @task.url
		
#links

	= link_to "Home", root_path, class: "btn btn-sm btn-default"
	= link_to "Edit", edit_task_path(@task), class: "btn btn-sm btn-success"
	= link_to "Delete", task_path(@task), method: :delete, data: { confirm: "Are you sure you want to delete the task?" }, class: "btn btn-sm btn-danger"